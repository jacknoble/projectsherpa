<form
style="color: white;"
	action="<%= users_url %>"
	method="<%= (purpose == :new) ? 'post' : 'put' %>"
>

	<input
		type="hidden"
		name="authenticity_token"
		value="<%= form_authenticity_token %>"
	>
	<label for="user_name">Your Full Name:</label>
	<input
		type="text"
		name="user[name]"
		id="user_name"
		value="<%= (purpose == :new) ? "" : user.fname + " " + user.lname %>"
	>

	<label for="user_company_name" style="margin-left: 5px">Company Name:</label>
	<input
		type="text"
		name="user[company_name]"
		id="user_company"
		value="<%= user.company.name if user.company %>"
	>
	<br>
	<br>
	<label for="user_email">Your Email:</label>
	<input
		type="text"
		name="user[email]"
		id="user_email"
		value="<%= user.email %>"
		>
	<label for="user_password" style="margin-left: 5px">Password:</label>
	<input
		type="password"
		name="user[password]"
		id="user_password"
	>
	<br>

	<input
	class="btn btn-sherpa"
		type="submit"
		value="<%= (purpose ==:new) ? "Register" : "Update Personal Info"%>"
	>
</form>